<div class="dashboard white-bg">

{{outlet topbar}}

{{#if session.isAuthenticated}} 
		<p>Logged in as {{session.user.name}}</p>
{{/if}}

	<div class="container">

		<h1 class="page-title">Latest Posts</h1>

		<ol class="posts">
		
			{{#each post in controller}}
				<li class="post">
					<div class="avatar-container inline-block">
					{{! http://emberjs.com/api/classes/Ember.Handlebars.helpers.html#method_bind-attr }}
						<img {{bind-attr src="post.user.photo"}} class="avatar">
					</div>
					<div class="post-container inline-block">
						<p class="username"><strong>{{post.user.name}}</strong></p>
						{{post.content}}
						<p class="post-meta">2 minutes ago &bull; Delete</p>
					</div>
				</li>
			{{/each}}

		</ol>

	</div>

</div>